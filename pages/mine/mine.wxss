.containers{
  display: flex;
  background: #f00;
  height: 300rpx;
}
.userInfo-icon{
   margin-left: 20px;
    margin-top: 50px;
    display: inline-block;
    width: 128rpx;
    height: 128rpx;
    background-size: cover;
    border-radius: 50%
    
}
.userInfo{
  margin-top: 60px;
   margin-left: 10px;
   display: flex;
   flex-direction: column;
}
.userInfo text{
  color: white;
  font-size: 30rpx;

}
.changeInfo{
  padding-top: 2px;
  padding-bottom: 2px;
  
  right: 0px;
  position: absolute;
  margin-top: 72px;
  color: white;
  font-size: 30rpx;
}
.menue{
  height: 80px;
   display: flex;
   justify-content: space-around;
   align-items: center;
}
.menue-item{
  width: 90px;
  height: 60px;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.menue-item image{
  width: 30px;
  height: 30px;
}
.menue-item text{
  font-size: 10px;
  margin-top: 10px;
}
.line{
  width: 100%;
  height: 8px;
  background-color: gainsboro;
}
.list{
  display: flex;
  flex-direction: column;
}
.list-item{
  display: flex;
  width: 100%;
  height: 40px;
  align-items: center;
}
.list-item image{
  margin-left: 10px;
  width: 20px;
  height: 20px;
}
.list-item text{
  font-size: 12px;
  margin-left: 10px;
}
#narrow{
  margin-top: 13px;
  width: 9px;
  height: 12px;
  position: absolute;
  right: 0;
  margin-right: 10px;
}
.item-line{
  width: 100%;
  height: 1px;
   background-color: gainsboro;
}
#intro{
  font-size: 8px;
  position: absolute;
  margin-right: 30px;
  right: 0;
  margin-top: 12px;
}
#switch{
  margin-top: 5px;
  position: absolute;
  right: 0;
  margin-right: 10px;
  width: 50px;
  height: 30px;
}
